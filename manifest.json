{
    "manifest_version": 3,
    "name": "Twitter Trends Block",
    "version": "1.0",
    "description": "Hide Twitter trends section.",
    "permissions": [
      "activeTab",
      "declarativeContent",
      "scripting"
    ],
    "content_scripts": [
      {
        "matches": ["*://*.twitter.com/*", "*://*.x.com/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
  